								<TextBox Grid.Row="1" Grid.Column="0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Height="26" Margin="0,3,0,0" VerticalContentAlignment="Center"/>
								<TextBox HorizontalAlignment="Center" Height="26" Grid.Row="1" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="111" Grid.Column="1" Margin="0,3,0,0" VerticalContentAlignment="Center"/>
							</Grid>
						</GroupBox>
						<GroupBox Header=" Падение тем-ры чугуна, С " Grid.Row="1" Grid.Column="1" Margin="0,0,3,0">
							<Grid>
								<Grid.RowDefinitions>
									<RowDefinition Height="32"/>
									<RowDefinition Height="42"/>
