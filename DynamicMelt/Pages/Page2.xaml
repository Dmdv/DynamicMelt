						</GroupBox>
						<GroupBox Header=" Полупродукт " Grid.Column="1">
							<Grid>
								<Grid.RowDefinitions>
									<RowDefinition/>
									<RowDefinition/>
								</Grid.RowDefinitions>
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="167*"/>
									<ColumnDefinition Width="93*"/>
									<ColumnDefinition Width="78*"/>
