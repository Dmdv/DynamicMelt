<Page x:Class="DynamicMelt.Pages.Page2"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	  mc:Ignorable="d" 
	  d:DesignHeight="473.24" d:DesignWidth="912.6"
	Title="Page2" WindowTitle="Шаг 2 - Ввод информации о шихтовке - OxyRun">

	<Grid>
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="460*"/>
				<RowDefinition Height="57*"/>
			</Grid.RowDefinitions>
			<GroupBox Header=" Результаты расчёта шихты на процесс для плавки № {} ">
				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition Height="142.002"/>
						<RowDefinition Height="105*"/>
						<RowDefinition Height="88*"/>
					</Grid.RowDefinitions>
					<Grid d:IsLocked="True">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="400"/>
							<ColumnDefinition Width="250"/>
							<ColumnDefinition Width="250.6"/>
						</Grid.ColumnDefinitions>
						<Grid.RowDefinitions>
							<RowDefinition Height="53"/>
							<RowDefinition/>
						</Grid.RowDefinitions>
						<TextBlock TextWrapping="Wrap" Text="На данном этапе Вам предлагается ознакомиться с результатами расчёта шихты на данную плавку. Если Вам известны фактические значения масс лома в совке(ах) и чугуна в заливочном ковше, введите их в соответствующие окна. Вы также можете зашумить массы чугуна и лома, внося в их значения случайную составляющую." Grid.ColumnSpan="3" Margin="3,2,0,0"/>
						<GroupBox Header=" Чугун " Grid.Row="1" Margin="0,0,3,0" d:IsLocked="True">
							<Grid>
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="123*"/>
									<ColumnDefinition Width="122*"/>
									<ColumnDefinition Width="123*"/>
								</Grid.ColumnDefinitions>
								<Grid.RowDefinitions>
									<RowDefinition Height="32"/>
									<RowDefinition Height="42"/>
								</Grid.RowDefinitions>
								<TextBlock TextWrapping="Wrap" Text="Расчётная масса, т" VerticalAlignment="Center" Width="120" HorizontalAlignment="Left"/>
								<TextBlock TextWrapping="Wrap" Text="Фактическая масса, т" VerticalAlignment="Center" Grid.Column="1" Width="120"/>
								<Button Content="Информация" Grid.Column="2" Height="26" VerticalAlignment="Bottom" Width="120" HorizontalAlignment="Left"/>
								<Button Content="Зашумить" Grid.Column="2" Grid.Row="1" Height="26" VerticalAlignment="Top" Margin="0,3,0,0" Width="120" HorizontalAlignment="Left"/>
								<TextBox Grid.Row="1" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Height="26" Margin="0,3,0,0"/>
								<TextBox HorizontalAlignment="Center" Height="26" Grid.Row="1" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="111" Grid.Column="1" Margin="0,3,0,0"/>
							</Grid>
						</GroupBox>
						<GroupBox Header=" Падение тем-ры чугуна, С " Grid.Row="1" Grid.Column="1" Margin="0,0,3,0" d:IsLocked="True">
							<Grid>
								<Grid.RowDefinitions>
									<RowDefinition Height="32"/>
									<RowDefinition Height="42"/>
								</Grid.RowDefinitions>
								<TextBlock TextWrapping="Wrap" Text="Разница температуры ванны и чугуна в начале продувки" VerticalAlignment="Center" HorizontalAlignment="Center"/>
								<TextBox HorizontalAlignment="Center" Height="26" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120" Grid.Row="1" Margin="0,3,0,0"/>
							</Grid>
						</GroupBox>
						<GroupBox Header=" Кислород продувки " Grid.Row="1" Grid.Column="2" d:IsLocked="True">
							<Grid>
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="119.3"/>
									<ColumnDefinition Width="119.3"/>
								</Grid.ColumnDefinitions>
								<Grid.RowDefinitions>
									<RowDefinition Height="32"/>
									<RowDefinition Height="42"/>
								</Grid.RowDefinitions>
								<TextBlock TextWrapping="Wrap" Text="Расчетное количество, м3" Grid.ColumnSpan="2" Margin="2,0,0,0"/>
								<TextBox HorizontalAlignment="Left" Height="26" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120" Grid.Row="1" Margin="0,3,0,0"/>
								<Button Content="Информация" Grid.Column="1" Height="26" Grid.Row="1" VerticalAlignment="Top" Margin="3,3,2,0"/>
							</Grid>
						</GroupBox>
					</Grid>
					<Grid Grid.Row="1">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="402*"/>
							<ColumnDefinition Width="367*"/>
						</Grid.ColumnDefinitions>
						<GroupBox Header=" Лом " Margin="0,0,3,0"/>
						<GroupBox Header=" Полупродукт " Grid.Column="1"/>
					</Grid>
					<Grid Grid.Row="2">
						<GroupBox Header=" Масса присаживаемых сыпучих материалов, тонн (суммарно на плавку)"/>
					</Grid>
				</Grid>
			</GroupBox>
		</Grid>
	</Grid>
</Page>
